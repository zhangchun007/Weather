<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <View
        android:id="@+id/divider_hor"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/color_life_line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/ll_life"
            android:layout_width="0dp"
            android:layout_height="105dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img"
                android:layout_width="@dimen/dp_life_icon"
                android:layout_height="@dimen/dp_life_icon"
                android:scaleType="centerCrop" />

            <TextView
                android:id="@+id/state"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:maxLength="4"
                android:text=""
                android:textColor="@color/color_life_state"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text=""
                android:textColor="@color/color_life_name"
                android:textSize="13dp" />
        </LinearLayout>

        <View
            android:id="@+id/divider_ver"
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/life_item_divider_margin"
            android:layout_marginBottom="@dimen/life_item_divider_margin"
            android:background="@color/color_life_line" />
    </LinearLayout>

</RelativeLayout>

