<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="13dp"
        android:layout_marginRight="15dp"
        >
        <ImageView
            android:id="@+id/iv_channel_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/icon_channel_close"
            android:layout_centerVertical="true"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingTop="3dp"
            android:paddingBottom="3dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="频道管理"
            android:textSize="18dp"
            android:textColor="@color/color_222222"
            android:layout_centerInParent="true"/>
    </RelativeLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:id="@+id/subscribe_main_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="10dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/my_category_tip_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="我的频道"
                    android:textSize="18dp"
                    android:textColor="@color/color_222222"
                    android:layout_centerVertical="true"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="拖拽可排序"
                    android:textSize="12dp"
                    android:textColor="@color/color_9296A0"
                    android:layout_marginLeft="80dp"
                    android:gravity="center"
                    android:layout_centerVertical="true"/>
                <Button
                    android:id="@+id/btn_compile"
                    android:layout_width="60dp"
                    android:layout_height="24dp"
                    android:text="编辑"
                    android:textColor="@color/color_2287F5"
                    android:textSize="13dp"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/shap_radius5_stroke_blue_hollow_white"
                    />
            </RelativeLayout>

            <com.zhangsheng.shunxin.information.widget.DragGridView
                android:id="@+id/userGridView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:horizontalSpacing="8dp"
                android:listSelector="@android:color/transparent"
                android:numColumns="4"
                android:scrollbars="vertical"
                android:stretchMode="columnWidth"
                android:verticalSpacing="8dp"
                android:layout_marginTop="15dp"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="15dp">
                <TextView
                    android:id="@+id/more_category_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="推荐频道"
                    android:textSize="18dp"
                    android:textColor="@color/color_222222"
                    android:layout_centerVertical="true"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="点击添加频道"
                    android:textSize="12dp"
                    android:textColor="@color/color_9296A0"
                   android:layout_marginLeft="10dp"
                    android:gravity="center"
                    android:layout_gravity="center_vertical"

                    />
            </LinearLayout>


            <com.zhangsheng.shunxin.information.widget.MyGridView
                android:id="@+id/otherGridView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:horizontalSpacing="8dp"
                android:listSelector="@android:color/transparent"
                android:numColumns="4"
                android:scrollbars="vertical"
                android:stretchMode="columnWidth"
                android:verticalSpacing="8dp"
                android:layout_marginTop="15dp"/>
        </LinearLayout>
    </ScrollView>

</LinearLayout>
