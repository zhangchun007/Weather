<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroud"
    android:orientation="vertical"
    tools:context=".weather.activity.AdSetActivity">

    <com.maiya.thirdlibrary.widget.TitleBar
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="@dimen/dp_16"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/dp_16"
        android:paddingRight="@dimen/dp_6">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="个性化广告推荐"
            android:textColor="#333"
            android:textSize="@dimen/dp_16" />

        <com.maiya.thirdlibrary.widget.SwitchButton
            android:id="@+id/cb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:sb_background="#EAEAEA"
            app:sb_border_width="0dp"
            app:sb_checked_color="#2BB5FF"
            app:sb_shadow_radius="8dp"
            app:sb_show_indicator="false"
            app:sb_uncheckcircle_width="0dp" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp_15"
        android:gravity="start"
        android:textSize="@dimen/dp_14"
        tools:text="我们的合作伙伴会通过SDK收集不能识别您个人身份的信息，以此形成您的间接画像标签，并根据您的画像标签向您推荐符合您兴趣的广告，详见《隐私政策》。" />
</LinearLayout>