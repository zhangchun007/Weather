<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <com.maiya.thirdlibrary.widget.shapview.ShapeLinearLayout
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_marginLeft="39dp"
        android:layout_marginRight="39dp"
        android:layout_height="wrap_content"
        app:ll_BgColor="@color/white"
        app:ll_Radius="12dp"
        >

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:textColor="@color/color_222"
            android:textStyle="bold"
            android:textSize="20dp"
            android:text="开启存储权限" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_margin="20dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:src="@mipmap/icon_permission_save"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/tv_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="便于缓存动态天气背景和语音播报等数据，节省流量。"
                android:layout_marginLeft="12dp"
                android:gravity="center_vertical"
                android:textColor="#A0A0A0"
                android:textSize="16dp" />

        </LinearLayout>



        <com.maiya.thirdlibrary.widget.shapview.ShapeView
            android:id="@+id/tv_Agree"
            android:layout_width="match_parent"
            android:layout_height="54dp"
            app:bgColor="#379BFF"
            android:textSize="18dp"
            android:layout_marginTop="4dp"
            android:textColor="@color/white"
            app:radius="4dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:text="去开启" />

        <TextView
            android:id="@+id/tv_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:textColor="#BCC3D3"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="20dp"
            android:text="放弃服务"
            />

    </com.maiya.thirdlibrary.widget.shapview.ShapeLinearLayout>
</LinearLayout>