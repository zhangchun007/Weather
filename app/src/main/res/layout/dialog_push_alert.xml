<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center"
    android:orientation="vertical">


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_marginLeft="58dp"
        android:layout_marginRight="58dp"
        android:layout_height="wrap_content">

        <com.maiya.thirdlibrary.widget.shapview.ShapeLinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:layout_marginTop="75dp"
            app:ll_Radius="10dp">

            <TextView
                android:id="@+id/tv_notification_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="104dp"
                android:gravity="center"
                android:maxLines="2"
                android:text="@string/notification_permission_content"
                android:textColor="#666666"
                android:textSize="16dp"
                />

            <com.maiya.thirdlibrary.widget.shapview.ShapeView
                android:id="@+id/tv_open_notification"
                android:layout_width="227dp"
                app:radius="24dp"
                app:startColor="#4AB3FD"
                app:endColor="#2D92FC"
                app:gradientOrientation="RIGHT_LEFT"
                android:layout_height="40dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="24dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="16dp"
                android:gravity="center"
                android:text="开启推送通知"
                android:textSize="15dp"
                android:textColor="@color/white" />
        </com.maiya.thirdlibrary.widget.shapview.ShapeLinearLayout>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/icon_push_alert"
            android:layout_gravity="center_horizontal"/>

        <ImageView
            android:id="@+id/close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/icon_push_alert_close"
            android:layout_gravity="right"/>

    </FrameLayout>

</RelativeLayout>