<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:orientation="vertical">


    <RelativeLayout
        android:id="@+id/adActionContainer"
        android:layout_width="185dp"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/adv_small_icon_des_close"
            android:layout_width="@dimen/dp_15"
            android:layout_height="@dimen/dp_15"
            android:layout_alignParentRight="true"
            android:paddingLeft="@dimen/dp_5"
            android:src="@mipmap/icon_ad_close" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_below="@id/adv_small_icon_des_close"
            android:layout_marginTop="@dimen/dp_5"
            android:background="@drawable/shape8r_white">

            <com.xinmeng.shadow.mediation.display.MediaView
                android:id="@+id/adv_media_view"
                android:layout_width="78dp"
                android:layout_marginStart="4dp"
                android:layout_centerVertical="true"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/adv_title_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="6dp"
                android:layout_marginRight="8dp"
                android:layout_toRightOf="@id/adv_media_view"
                android:ellipsize="end"
                android:maxLines="2"
                android:textColor="#323232"
                android:textSize="@dimen/dp_16" />
        </RelativeLayout>

    </RelativeLayout>


</merge>