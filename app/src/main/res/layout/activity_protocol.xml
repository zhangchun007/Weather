<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="@dimen/dp_47"
    android:layout_marginRight="@dimen/dp_47"
    android:background="@drawable/shape_r12_white"
    android:paddingStart="@dimen/dp_15"
    android:paddingEnd="@dimen/dp_15">

    <TextView
        android:id="@+id/tv_appBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_20"
        android:gravity="center"
        android:paddingBottom="@dimen/dp_8"
        android:text="用户协议及隐私条款"
        android:textColor="@color/color_333"
        android:textSize="@dimen/dp_16"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="HardcodedText" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="@dimen/dp_15"
        app:layout_constraintBottom_toTopOf="@+id/tv_Agree"
        app:layout_constraintTop_toBottomOf="@+id/tv_appBar">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lineSpacingMultiplier="1.3"
                android:text="我们依据最新的法律，向您说明相雨天气软件的隐私政策，特向您推送本提示。请您阅读并充分理解相关条款。"
                android:textColor="@color/color_999"
                android:textSize="@dimen/dp_12"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="HardcodedText" />

            <TextView
                android:id="@+id/tv1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_8"
                android:text="我们承诺："
                android:textColor="@color/color_333"
                android:textSize="@dimen/dp_12"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv"
                tools:ignore="HardcodedText" />

            <ImageView
                android:id="@+id/im"
                android:layout_width="@dimen/dp_40"
                android:layout_height="@dimen/dp_40"
                android:layout_marginTop="@dimen/dp_8"
                android:src="@mipmap/im_info_protection"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv1"
                tools:ignore="ContentDescription" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_8"
                android:lineSpacingMultiplier="1.3"
                android:text="我们会严格按照《网络安全法》、《信息网络传播保护条例》等保护您的个人信息；"
                android:textColor="@color/color_999"
                android:textSize="@dimen/dp_11"
                app:layout_constraintBottom_toBottomOf="@+id/im"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/im"
                app:layout_constraintTop_toTopOf="@+id/im"
                tools:ignore="HardcodedText" />

            <ImageView
                android:id="@+id/im1"
                android:layout_width="@dimen/dp_40"
                android:layout_height="@dimen/dp_40"
                android:layout_marginTop="@dimen/dp_8"
                android:src="@mipmap/im_user_auth"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/im"
                tools:ignore="ContentDescription" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_8"
                android:lineSpacingMultiplier="1.3"
                android:text="如果未经您的授权，我们不会使用您的个人信息用于您未授权的其他途径或目的。"
                android:textColor="@color/color_999"
                android:textSize="@dimen/dp_11"
                app:layout_constraintBottom_toBottomOf="@+id/im1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/im1"
                app:layout_constraintTop_toTopOf="@+id/im1"
                tools:ignore="HardcodedText" />

            <TextView
                android:id="@+id/tv5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_8"
                android:text="您点击“同意”，即表示您已阅读并同意更新后的《服务协议》及《隐私政策》"
                android:textColor="@color/color_999"
                android:textSize="@dimen/dp_11"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/im1"
                tools:ignore="HardcodedText" />

            <TextView
                android:id="@+id/tv3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_8"
                android:layout_marginBottom="@dimen/dp_16"
                android:text="查看完整版"
                android:textColor="@color/color_999"
                android:textSize="@dimen/dp_11"
                app:layout_constraintEnd_toStartOf="@+id/tv_protocol"
                app:layout_constraintHorizontal_chainStyle="packed"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv5"
                tools:ignore="HardcodedText" />

            <TextView
                android:id="@+id/tv_protocol"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp_16"
                android:text="《服务协议》"
                android:textColor="@color/color_379bff"
                android:textSize="@dimen/dp_11"
                app:layout_constraintBaseline_toBaselineOf="@+id/tv3"
                app:layout_constraintEnd_toStartOf="@+id/tv4"
                app:layout_constraintStart_toEndOf="@+id/tv3"
                tools:ignore="HardcodedText" />

            <TextView
                android:id="@+id/tv4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp_16"
                android:text="及"
                android:textColor="@color/color_999"
                android:textSize="@dimen/dp_11"
                app:layout_constraintBaseline_toBaselineOf="@+id/tv3"
                app:layout_constraintEnd_toStartOf="@+id/tv_privacy"
                app:layout_constraintStart_toEndOf="@+id/tv_protocol"
                tools:ignore="HardcodedText" />

            <TextView
                android:id="@+id/tv_privacy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp_16"
                android:text="《隐私协议》"
                android:textColor="@color/color_379bff"
                android:textSize="@dimen/dp_11"
                app:layout_constraintBaseline_toBaselineOf="@+id/tv3"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/tv4"
                tools:ignore="HardcodedText" />

            <TextView
                android:id="@+id/tv6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_16"
                android:text="相雨天气软件稍后将向您申请获取相关权限，在此，我们对一些重要权限的使用作出解释说明，请您仔细阅读并充分理解。"
                android:textColor="@color/color_999"
                android:textSize="@dimen/dp_11"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_privacy"
                tools:ignore="HardcodedText" />

            <TextView
                android:id="@+id/tv7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_8"
                android:text="重要权限说明:"
                android:textColor="@color/color_333"
                android:textSize="@dimen/dp_12"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv6"
                tools:ignore="HardcodedText" />

            <ImageView
                android:id="@+id/im2"
                android:layout_width="@dimen/dp_40"
                android:layout_height="@dimen/dp_40"
                android:layout_marginTop="@dimen/dp_8"
                android:src="@mipmap/im_protocol01"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv7"
                tools:ignore="ContentDescription" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_8"
                android:lineSpacingMultiplier="1.3"
                android:text="您使用相雨天气时，为了保障软件服务的安全、运营的质量效率，我们会收集您的日志信息；"
                android:textColor="@color/color_999"
                android:textSize="@dimen/dp_11"
                app:layout_constraintBottom_toBottomOf="@+id/im2"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/im2"
                app:layout_constraintTop_toTopOf="@+id/im2"
                tools:ignore="HardcodedText" />

            <ImageView
                android:id="@+id/im3"
                android:layout_width="@dimen/dp_40"
                android:layout_height="@dimen/dp_40"
                android:layout_marginTop="@dimen/dp_8"
                android:src="@mipmap/im_protocol02"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/im2"
                tools:ignore="ContentDescription" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_8"
                android:lineSpacingMultiplier="1.3"
                android:text="您使用相雨天气时，为了缓存数据信息，我们需要收集您的存储信息；"
                android:textColor="@color/color_999"
                android:textSize="@dimen/dp_11"
                app:layout_constraintBottom_toBottomOf="@+id/im3"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/im3"
                app:layout_constraintTop_toTopOf="@+id/im3"
                tools:ignore="HardcodedText" />

            <ImageView
                android:id="@+id/im4"
                android:layout_width="@dimen/dp_40"
                android:layout_height="@dimen/dp_40"
                android:layout_marginTop="@dimen/dp_8"
                android:src="@mipmap/im_protocol03"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/im3"
                tools:ignore="ContentDescription" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_8"
                android:lineSpacingMultiplier="1.3"
                android:text="您使用相雨天气时，为了实现安全风控的目的，我们需要收集您的设备信息；"
                android:textColor="@color/color_999"
                android:textSize="@dimen/dp_11"
                app:layout_constraintBottom_toBottomOf="@+id/im4"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/im4"
                app:layout_constraintTop_toTopOf="@+id/im4"
                tools:ignore="HardcodedText" />

            <ImageView
                android:id="@+id/im5"
                android:layout_width="@dimen/dp_40"
                android:layout_height="@dimen/dp_40"
                android:layout_marginTop="@dimen/dp_8"
                android:src="@mipmap/im_protocol04"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/im4"
                tools:ignore="ContentDescription" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_8"
                android:lineSpacingMultiplier="1.3"
                android:text="您使用相雨天气时，为了实现天气预报的目的，我们需要收集您的位置信息。"
                android:textColor="@color/color_999"
                android:textSize="@dimen/dp_11"
                app:layout_constraintBottom_toBottomOf="@+id/im5"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/im5"
                app:layout_constraintTop_toTopOf="@+id/im5"
                tools:ignore="HardcodedText" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_8"
                android:paddingBottom="@dimen/dp_10"
                android:text="以上信息您有权拒绝或撤销授权；我们会采取业界先进的安全措施保护您的信息安全；未经您的同意，我们不会从第三方处获取、共享或向其提供您的信息。"
                android:textColor="@color/color_999"
                android:textSize="@dimen/dp_11"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/im5" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>

    <TextView
        android:id="@+id/tv_Agree"
        android:layout_width="0dp"
        android:layout_height="@dimen/dp_45"
        android:layout_marginLeft="@dimen/dp_10"
        android:background="@drawable/shape_r30_blue_bg"
        android:gravity="center"
        android:text="同意"
        android:textColor="@android:color/white"
        android:textSize="@dimen/dp_18"
        app:layout_constraintBottom_toBottomOf="@+id/tv_unAgree"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tv_unAgree"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/tv_unAgree"
        android:layout_width="0dp"
        android:layout_height="@dimen/dp_45"
        android:layout_marginRight="@dimen/dp_10"
        android:layout_marginBottom="@dimen/dp_20"
        android:background="@drawable/shape_gray_sbg"
        android:gravity="center"
        android:text="不同意"
        android:textColor="#BCC3D3"
        android:textSize="@dimen/dp_18"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/tv_Agree"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="HardcodedText" />

</androidx.constraintlayout.widget.ConstraintLayout>