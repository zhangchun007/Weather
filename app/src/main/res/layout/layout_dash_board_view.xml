<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="268dp"
    android:layout_height="268dp"
    android:layout_centerInParent="true">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@mipmap/im_scale" />

    <com.zhangsheng.shunxin.weather.widget.DashBoardView
        android:id="@+id/mdbv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_margin="@dimen/dp_26" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/tv_mun"
        android:layout_centerHorizontal="true"
        android:text="空气质量"
        android:layout_marginBottom="-10dp"
        android:textColor="@color/color_999"
        android:textSize="@dimen/dp_15" />

    <TextView
        android:id="@+id/tv_mun"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="0"
        android:textSize="60dp" />

    <TextView
        android:id="@+id/tv_level"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_mun"
        android:layout_marginTop="-10dp"
        android:layout_centerHorizontal="true"
        tools:text="优"
        android:textColor="@color/color_999"
        android:textSize="@dimen/dp_15" />

    <TextView
        android:id="@+id/tv_centent"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_centerInParent="true" />

    <RelativeLayout
        android:id="@+id/rel"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_below="@+id/tv_centent"
        android:layout_toLeftOf="@+id/tv_centent">

        <ImageView
            android:id="@+id/im_water"
            android:layout_width="@dimen/dp_38"
            android:layout_height="@dimen/dp_38"
            android:layout_alignParentBottom="true"
            android:src="@mipmap/im_water1" />

    </RelativeLayout>

</RelativeLayout>
