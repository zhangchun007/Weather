<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/refresh_margin_parent_left"
    android:id="@+id/mainView1"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/refresh_icon"
        android:layout_width="@dimen/refresh_icon_size"
        android:layout_height="@dimen/refresh_icon_size" />

    <TextView
        android:id="@+id/refresh_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/refresh_icon_margin_left"
        android:text="正在更新"
        android:textColor="#8cffffff"
        android:textSize="@dimen/refresh_text_size" />
</LinearLayout>
