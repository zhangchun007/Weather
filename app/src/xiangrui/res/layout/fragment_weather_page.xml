<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#D9222222"
    tools:ignore="SpUsage,HardcodedText,ContentDescription,MissingConstraints,RtlSymmetry">

    <com.zhangsheng.shunxin.weather.widget.TouchScrollView1
        android:id="@+id/scrollview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:scrollbars="none">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:descendantFocusability="blocksDescendants">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/ct_bottom"
                android:layout_width="match_parent"
                android:layout_height="1000dp">

                <FrameLayout
                    android:id="@+id/frame_tag"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp"
                    android:layout_marginBottom="12dp"
                    android:minHeight="@dimen/dp_1"
                    app:layout_constraintBottom_toTopOf="@+id/rl_bottom"
                    app:layout_constraintLeft_toLeftOf="parent">

                    <com.zhangsheng.shunxin.ad.widget.AdvWeatherIconLayout
                        android:id="@+id/adv_icon"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                </FrameLayout>

                <LinearLayout
                    android:id="@+id/rl_bottom"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingStart="@dimen/dp_12"
                    android:paddingTop="@dimen/dp_12"
                    android:paddingEnd="@dimen/dp_12"
                    android:paddingBottom="@dimen/dp_18"
                    app:layout_constraintBottom_toBottomOf="parent">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/layout_today"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:paddingEnd="@dimen/dp_18">

                        <TextView
                            android:id="@+id/tv01"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="今天"
                            android:textColor="#99ffffff"
                            android:textSize="16dp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/today_weather"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white"
                            android:textSize="16dp"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            tools:text="晴转多云" />

                        <com.zhangsheng.shunxin.weather.widget.LunarTextView
                            android:id="@+id/today_temp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_5"
                            android:paddingTop="3dp"
                            android:textColor="@color/white"
                            android:textSize="@dimen/dp_27"
                            app:fontsPath="fonts/gothic.ttf"
                            app:layout_constraintStart_toStartOf="@+id/tv01"
                            app:layout_constraintTop_toBottomOf="@+id/tv01"
                            tools:text="28/36" />

                        <ImageView
                            android:id="@+id/today_weather_icon"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_marginStart="@dimen/dp_6"
                            android:focusable="false"
                            android:scaleType="centerCrop"
                            app:layout_constraintBottom_toBottomOf="@+id/today_temp"
                            app:layout_constraintStart_toEndOf="@+id/today_temp"
                            app:layout_constraintTop_toTopOf="@+id/today_temp" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@mipmap/ic_next"
                            app:layout_constraintBottom_toBottomOf="@+id/today_temp"
                            app:layout_constraintEnd_toEndOf="@+id/today_weather"
                            app:layout_constraintTop_toTopOf="@+id/today_temp" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <View
                        android:layout_width="0.5dp"
                        android:layout_height="@dimen/dp_50"
                        android:layout_gravity="center"
                        android:background="#1affffff" />

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/layout_tomorrow"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:paddingStart="@dimen/dp_18">

                        <TextView
                            android:id="@+id/tv02"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/dp_2"
                            android:text="明天"
                            android:textColor="#99ffffff"
                            android:textSize="16dp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <ImageView
                            android:id="@+id/tomorrow_weather_icon"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_marginStart="@dimen/dp_6"
                            android:focusable="false"
                            android:scaleType="centerCrop"
                            app:layout_constraintBottom_toBottomOf="@+id/tomorrow_temp"
                            app:layout_constraintStart_toEndOf="@+id/tomorrow_temp"
                            app:layout_constraintTop_toTopOf="@+id/tomorrow_temp" />

                        <TextView
                            android:id="@+id/tomorrow_weather"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white"
                            android:textSize="16dp"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            tools:text="多云转晴" />

                        <com.zhangsheng.shunxin.weather.widget.LunarTextView
                            android:id="@+id/tomorrow_temp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_5"
                            android:textColor="@color/white"
                            android:textSize="@dimen/dp_27"
                            app:fontsPath="fonts/gothic.ttf"
                            app:layout_constraintStart_toStartOf="@+id/tv02"
                            app:layout_constraintTop_toBottomOf="@+id/tv02" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@mipmap/ic_next"
                            app:layout_constraintBottom_toBottomOf="@+id/tomorrow_temp"
                            app:layout_constraintEnd_toEndOf="@+id/tomorrow_weather"
                            app:layout_constraintTop_toTopOf="@+id/tomorrow_temp" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                </LinearLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.helper.widget.Layer
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/shape9r_fff"
                app:constraint_referenced_ids="ll_24,hour_weather" />

            <TextView
                android:id="@+id/ll_24"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_13"
                android:layout_marginEnd="@dimen/dp_12"
                android:paddingTop="@dimen/dp_12"
                android:paddingBottom="@dimen/dp_10"
                android:text="24小时预报"
                android:textColor="#fff"
                android:textSize="@dimen/dp_18"
                app:layout_constraintStart_toStartOf="@+id/hour_weather"
                app:layout_constraintTop_toBottomOf="@+id/ct_bottom" />

            <com.maiya.thirdlibrary.widget.smartlayout.recycleview.SmartRecycleView
                android:id="@+id/hour_weather"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_12"
                android:layout_marginEnd="@dimen/dp_12"
                android:focusable="false"
                app:LayoutManager="horizontal"
                app:ScrollContol="horizontal"
                app:isScrollChild="true"
                app:item_layout="@layout/item_hour_weather"
                app:layout_constraintTop_toBottomOf="@+id/ll_24" />

            <Space
                android:id="@+id/divider1"
                android:layout_width="match_parent"
                android:layout_height="12dp"
                app:layout_constraintTop_toBottomOf="@+id/hour_weather" />

            <com.zhangsheng.shunxin.ad.widget.AdvWeatherLayout
                android:id="@+id/adv_weather_24"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_12"
                android:layout_marginEnd="@dimen/dp_12"
                app:background="@drawable/shape_ad_bg"
                app:divider_color="@android:color/transparent"
                app:divider_higth="@dimen/dp_12"
                app:layout_constraintTop_toBottomOf="@+id/divider1"
                app:text_color="@android:color/white" />

            <LinearLayout
                android:id="@+id/fifteenWeatherContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:background="@drawable/shape9r_fff"
                android:orientation="vertical"
                app:layout_constraintTop_toBottomOf="@+id/adv_weather_24">

                <LinearLayout
                    android:id="@+id/ll_15"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dp_12"
                        android:layout_marginTop="@dimen/dp_12"
                        android:layout_marginBottom="@dimen/dp_12"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:text="15日预报"
                        android:textColor="#fff"
                        android:textSize="@dimen/dp_18" />

                    <LinearLayout
                        android:id="@+id/lin_chart_type"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:descendantFocusability="blocksDescendants"
                        android:gravity="center_vertical"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/chart_type"
                            android:layout_width="36dp"
                            android:layout_height="@dimen/dp_24"
                            android:layout_marginStart="@dimen/dp_16"
                            android:layout_marginEnd="@dimen/dp_3"
                            android:background="@drawable/shape_blue_sbg"
                            android:clickable="false"
                            android:enabled="false"
                            android:focusable="false"
                            android:gravity="center"
                            android:text="趋势"
                            android:textColor="#fff"
                            android:textSize="12dp" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/lin_line_type"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:descendantFocusability="blocksDescendants"
                        android:gravity="center_vertical"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/line_type"
                            android:layout_width="36dp"
                            android:layout_height="@dimen/dp_24"
                            android:layout_marginStart="@dimen/dp_2"
                            android:layout_marginEnd="@dimen/dp_10"
                            android:clickable="false"
                            android:enabled="false"
                            android:focusable="false"
                            android:gravity="center"
                            android:text="列表"
                            android:textColor="#82878B"
                            android:textSize="12dp" />

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/frame_list_fif"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <com.maiya.thirdlibrary.widget.smartlayout.recycleview.SmartRecycleView
                        android:id="@+id/fif_list_weather"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:LayoutManager="vertical"
                        app:isScrollChild="true"
                        app:item_layout="@layout/item_fif_list" />

                    <com.maiya.thirdlibrary.widget.shapview.ShapeView
                        android:id="@+id/fif_load_more"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/dp_50"
                        android:drawableEnd="@mipmap/icon_arrow_down"
                        android:drawablePadding="@dimen/dp_6"
                        android:gravity="center"
                        android:text="点击查看15天天气"
                        android:textColor="#088EFF"
                        android:textSize="@dimen/dp_16"
                        app:bottomLeftRadius="@dimen/dp_8"
                        app:bottomRightRadius="@dimen/dp_8" />

                </LinearLayout>

                <com.maiya.thirdlibrary.widget.smartlayout.recycleview.SmartRecycleView
                    android:id="@+id/fif_weather"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dp_10"
                    android:focusable="false"
                    app:LayoutManager="horizontal"
                    app:ScrollContol="horizontal"
                    app:isScrollChild="true"
                    app:item_layout="@layout/weather_item" />

            </LinearLayout>

            <Space
                android:id="@+id/divider2"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_12"
                app:layout_constraintTop_toBottomOf="@+id/fifteenWeatherContainer" />

            <com.zhangsheng.shunxin.ad.widget.AdvWeatherLayout
                android:id="@+id/adv_weather_fif"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_12"
                android:layout_marginEnd="@dimen/dp_12"
                app:background="@drawable/shape_ad_bg"
                app:divider_color="@android:color/transparent"
                app:divider_higth="@dimen/dp_12"
                app:layout_constraintTop_toBottomOf="@+id/divider2"
                app:text_color="@android:color/white" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/forty_weather_layout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_12"
                android:layout_marginEnd="@dimen/dp_12"
                android:background="@drawable/shape9r_fff"
                android:paddingBottom="@dimen/dp_20"
                android:visibility="gone"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/adv_weather_fif">

                <TextView
                    android:id="@+id/tv_forty"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_12"
                    android:layout_marginTop="@dimen/dp_12"
                    android:text="40日天气预报"
                    android:textColor="#fff"
                    android:textSize="@dimen/dp_18"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tv_forty_more"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/dp_12"
                    android:drawableEnd="@mipmap/ic_next11"
                    android:drawablePadding="@dimen/dp_5"
                    android:text="查看详情"
                    android:textColor="#fff"
                    android:textSize="@dimen/dp_14"
                    app:layout_constraintBaseline_toBaselineOf="@+id/tv_forty"
                    app:layout_constraintEnd_toEndOf="parent" />

                <androidx.constraintlayout.helper.widget.Layer
                    android:id="@+id/rl_forty_temp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:constraint_referenced_ids="im01,tv_forty_1,tv_forty_temp" />

                <ImageView
                    android:id="@+id/im01"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_12"
                    android:layout_marginTop="@dimen/dp_18"
                    android:src="@mipmap/icon_temperature"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_forty" />

                <TextView
                    android:id="@+id/tv_forty_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_12"
                    android:text="温度趋势"
                    android:textColor="#aaa"
                    android:textSize="@dimen/dp_13"
                    app:layout_constraintStart_toEndOf="@+id/im01"
                    app:layout_constraintTop_toTopOf="@+id/im01" />

                <TextView
                    android:id="@+id/tv_forty_temp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/dp_12"
                    android:text="12天升温"
                    android:textColor="#fff"
                    android:textSize="@dimen/dp_15"
                    app:layout_constraintEnd_toEndOf="@+id/view_line"
                    app:layout_constraintStart_toStartOf="@+id/tv_forty_1"
                    app:layout_constraintTop_toBottomOf="@+id/tv_forty_1" />

                <View
                    android:id="@+id/view_line"
                    android:layout_width="1dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <androidx.constraintlayout.helper.widget.Layer
                    android:id="@+id/rl_forty_rain"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:constraint_referenced_ids="im02,tv_forty_2,tv_forty_rain" />

                <ImageView
                    android:id="@+id/im02"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_12"
                    android:layout_marginTop="@dimen/dp_18"
                    android:src="@mipmap/icon_rainfall"
                    app:layout_constraintStart_toEndOf="@+id/view_line"
                    app:layout_constraintTop_toBottomOf="@+id/tv_forty" />

                <TextView
                    android:id="@+id/tv_forty_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_12"
                    android:text="降水趋势"
                    android:textColor="#aaa"
                    android:textSize="@dimen/dp_13"
                    app:layout_constraintStart_toEndOf="@+id/im02"
                    app:layout_constraintTop_toTopOf="@+id/im02" />

                <TextView
                    android:id="@+id/tv_forty_rain"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/dp_12"
                    android:text="12天降雨"
                    android:textColor="#fff"
                    android:textSize="@dimen/dp_15"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="@+id/tv_forty_2"
                    app:layout_constraintTop_toBottomOf="@+id/tv_forty_2" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <LinearLayout
                android:id="@+id/ll_life"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginEnd="@dimen/dp_12"
                android:background="@drawable/shape9r_fff"
                android:orientation="vertical"
                android:paddingTop="@dimen/dp_12"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/forty_weather_layout">

                <TextView
                    android:id="@+id/life_t2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_12"
                    android:layout_marginBottom="@dimen/dp_12"
                    android:gravity="center"
                    android:text="生活指数"
                    android:textColor="#fff"
                    android:textSize="18dp" />

                <com.maiya.thirdlibrary.widget.smartlayout.recycleview.SmartRecycleView
                    android:id="@+id/life"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:LayoutManager="horizontal_grid"
                    app:isScrollChild="true"
                    app:item_count="3"
                    app:item_layout="@layout/item_life_sug" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="@dimen/dp_24"
                    android:layout_marginTop="@dimen/dp_5"
                    android:layout_marginRight="@dimen/dp_24"
                    android:background="#1affffff" />

                <LinearLayout
                    android:id="@+id/ll_calendar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingTop="@dimen/dp_12"
                    android:paddingBottom="@dimen/dp_18">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/cl_calendar"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:descendantFocusability="blocksDescendants"
                        android:focusable="true">

                        <com.zhangsheng.shunxin.weather.widget.LunarTextView
                            android:id="@+id/tv_calendar_lunar"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="15dp"
                            android:text=""
                            android:textColor="#fff"
                            android:textSize="@dimen/dp_22"
                            app:fontsPath="fonts/lunar.ttf"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <com.zhangsheng.shunxin.calendar.wegdit.SolarTermsTextView
                            android:id="@+id/tv_solar_term"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="5dp"
                            android:background="@mipmap/icon_solar_term_small_bg"
                            android:maxEms="1"
                            android:maxLines="2"
                            android:paddingStart="1dp"
                            android:text=""
                            android:textColor="#ffffffff"
                            android:textSize="@dimen/dp_12"
                            android:visibility="gone"
                            app:layout_constraintLeft_toRightOf="@+id/tv_calendar_lunar"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/date_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="15dp"
                            android:layout_marginTop="5dp"
                            android:text=""
                            android:textColor="#82878B"
                            android:textSize="14dp"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/tv_calendar_lunar" />
                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/cl_almanac"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:descendantFocusability="blocksDescendants"
                        android:focusable="true">

                        <TextView
                            android:id="@+id/tv_yi"
                            android:layout_width="120dp"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="23dp"
                            android:ellipsize="end"
                            android:singleLine="true"
                            android:text=""
                            android:textColor="#82878B"
                            android:textSize="@dimen/dp_14"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="9dp"
                            android:gravity="center"
                            android:text="宜"
                            android:textColor="@color/white"
                            android:textSize="16dp"
                            app:layout_constraintBaseline_toBaselineOf="@+id/tv_yi"
                            app:layout_constraintRight_toLeftOf="@+id/tv_yi"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/tv_ji"
                            android:layout_width="120dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="6dp"
                            android:layout_marginEnd="23dp"
                            android:ellipsize="end"
                            android:singleLine="true"
                            android:text=""
                            android:textColor="#82878B"
                            android:textSize="@dimen/dp_14"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/tv_yi" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="9dp"
                            android:gravity="center"
                            android:text="忌"
                            android:textColor="@color/white"
                            android:textSize="16dp"
