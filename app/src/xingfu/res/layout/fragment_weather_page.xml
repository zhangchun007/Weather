<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainView"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.zhangsheng.shunxin.weather.widget.TouchScrollView1
        android:id="@+id/scrollview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:scrollbars="none">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:descendantFocusability="blocksDescendants">

            <View
                android:id="@+id/view_standard"
                android:layout_width="match_parent"
                android:layout_height="1000dp"
                app:layout_constraintTop_toTopOf="parent" />

            <com.zhangsheng.shunxin.weather.widget.HighAlertView
                android:id="@+id/warns"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.constraintlayout.helper.widget.Layer
                android:id="@+id/rl_temp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:constraint_referenced_ids="temp,im_o,weather,weather_icon"
                tools:ignore="MissingConstraints" />

            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/weather_icon"
                android:layout_width="137dp"
                android:layout_height="137dp"
                android:layout_marginTop="@dimen/dp_30"
                app:layout_constraintEnd_toStartOf="@+id/view"
                app:layout_constraintTop_toTopOf="parent"
                app:lottie_loop="true"
                tools:alpha="1"
                tools:src="@mipmap/icon_weather_zhongyu" />

            <View
                android:id="@+id/view"
                android:layout_width="@dimen/dp_27"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <com.zhangsheng.shunxin.weather.widget.LunarTextView
                android:id="@+id/temp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:includeFontPadding="false"
                android:text="25"
                android:textColor="@color/white"
                android:textSize="80dp"
                android:textStyle="bold"
                app:fontsPath="fonts/century-gothic-bold.ttf"
                app:layout_constraintStart_toEndOf="@+id/view"
                app:layout_constraintTop_toTopOf="@+id/weather_icon" />

            <ImageView
                android:id="@+id/im_o"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_5"
                android:layout_marginTop="@dimen/dp_20"
                android:src="@mipmap/icon_temp_circle"
                app:layout_constraintStart_toEndOf="@+id/temp"
                app:layout_constraintTop_toTopOf="@+id/temp" />

            <TextView
                android:id="@+id/weather"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="多云"
                android:textColor="@color/white"
                android:textSize="18dp"
                app:layout_constraintStart_toStartOf="@+id/temp"
                app:layout_constraintTop_toBottomOf="@+id/temp" />

            <androidx.constraintlayout.helper.widget.Layer
                android:id="@+id/ll_cloud"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:constraint_referenced_ids="lin_wind,lin_humidity"
                tools:ignore="MissingConstraints" />

            <com.zhangsheng.shunxin.ad.widget.AdvBannerMaterialView
                android:id="@+id/adv_banner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="12dp"
                android:layout_marginRight="12dp"
                android:visibility="gone"
                app:layout_constraintTop_toTopOf="parent" />

            <!--      中间三个tab      -->
            <androidx.appcompat.widget.LinearLayoutCompat
                android:id="@+id/lin_wind"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_14"
                android:gravity="center"
                android:orientation="vertical"
                app:layout_constraintEnd_toStartOf="@+id/lin_humidity"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/weather_icon">

                <ImageView
                    android:layout_width="@dimen/dp_28"
                    android:layout_height="@dimen/dp_28"
                    android:src="@mipmap/icon_wind" />

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_5"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/cloud"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="空气"
                        android:textColor="@color/white"
                        android:textSize="@dimen/dp_14" />

                    <com.zhangsheng.shunxin.weather.widget.LunarTextView
                        android:id="@+id/cloud_level"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_3"
                        android:text="优"
                        android:textColor="@color/white"
                        android:textSize="@dimen/dp_14"
                        android:textStyle="bold"
                        app:fontsPath="fonts/century-gothic-bold.ttf" />
                </androidx.appcompat.widget.LinearLayoutCompat>

            </androidx.appcompat.widget.LinearLayoutCompat>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:id="@+id/lin_humidity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                app:layout_constraintEnd_toStartOf="@+id/lin_air"
                app:layout_constraintStart_toEndOf="@+id/lin_wind"
                app:layout_constraintTop_toTopOf="@+id/lin_wind">

                <ImageView
                    android:layout_width="@dimen/dp_28"
                    android:layout_height="@dimen/dp_28"
                    android:src="@mipmap/humidity" />

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_5"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_weight"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="东南风"
                        android:textColor="@color/white"
                        android:textSize="@dimen/dp_14" />

                    <com.zhangsheng.shunxin.weather.widget.LunarTextView
                        android:id="@+id/weight"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_3"
                        android:text="2级"
                        android:textColor="@color/white"
                        android:textSize="@dimen/dp_14"
                        android:textStyle="bold"
                        app:fontsPath="fonts/century-gothic-bold.ttf" />
                </androidx.appcompat.widget.LinearLayoutCompat>

            </androidx.appcompat.widget.LinearLayoutCompat>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:id="@+id/lin_air"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/lin_humidity"
                app:layout_constraintTop_toTopOf="@+id/lin_wind">

                <ImageView
                    android:id="@+id/im_air"
                    android:layout_width="@dimen/dp_28"
                    android:layout_height="@dimen/dp_28"
                    android:src="@mipmap/icon_leaf" />

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_5"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="空气"
                        android:textColor="@color/white"
                        android:textSize="@dimen/dp_14" />

                    <com.zhangsheng.shunxin.weather.widget.LunarTextView
                        android:id="@+id/tv_air"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_3"
                        android:text="优"
                        android:textColor="@color/white"
                        android:textSize="@dimen/dp_14"
                        android:textStyle="bold"
                        app:fontsPath="fonts/century-gothic-bold.ttf" />
                </androidx.appcompat.widget.LinearLayoutCompat>

            </androidx.appcompat.widget.LinearLayoutCompat>

            <com.zhangsheng.shunxin.ad.widget.AdvWeatherIconLayout
                android:id="@+id/adv_icon"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:layout_marginBottom="12dp"
                app:layout_constraintBottom_toTopOf="@+id/ll_bottom"/>

            <!-- 下方滑动内容-->
            <androidx.appcompat.widget.LinearLayoutCompat
                android:id="@+id/ll_bottom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/home_bottom_bg"
                android:orientation="vertical"
                android:paddingTop="@dimen/dp_12"
                android:paddingBottom="@dimen/dp_12"
                app:layout_constraintTop_toBottomOf="@+id/view_standard">

                <!-- 天气预警-->
                <LinearLayout
                    android:id="@+id/ll_weather"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp"
                    android:background="@drawable/shape_r12_white"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <com.airbnb.lottie.LottieAnimationView
                        android:id="@+id/lo_home_rain"
                        android:layout_width="27.5dp"
                        android:layout_height="28dp"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:visibility="gone"
                        app:lottie_loop="true" />

                    <TextView
                        android:id="@+id/rain_tv"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:layout_marginRight="@dimen/dp_10"
                        android:layout_weight="1"
                        android:ellipsize="marquee"
                        android:focusable="false"
                        android:gravity="left|center_vertical"
                        android:singleLine="true"
                        android:text="查看未来2小时降雨预报"
                        android:textColor="@color/color_333"
                        android:textSize="14dp" />

                    <com.airbnb.lottie.LottieAnimationView
                        android:id="@+id/lo_next"
                        android:layout_width="@dimen/dp_12"
                        android:layout_height="@dimen/dp_12"
                        android:layout_marginRight="@dimen/dp_10"
                        app:lottie_autoPlay="true"
                        app:lottie_fileName="next.json"
                        app:lottie_loop="true" />

                </LinearLayout>

                <!-- 今明日天气-->
                <androidx.appcompat.widget.LinearLayoutCompat
                    android:id="@+id/lin_today"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:layout_marginTop="@dimen/dp_12"
                    android:layout_marginRight="12dp"
                    android:background="@drawable/shape_r12_white"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingStart="@dimen/dp_20"
                    android:paddingTop="@dimen/dp_10"
                    android:paddingEnd="@dimen/dp_20"
                    android:paddingBottom="@dimen/dp_10">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/layout_today"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">

                        <TextView
                            android:id="@+id/tv01"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="今天"
                            android:textColor="@color/color_333"
                            android:textSize="18dp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/today_weather"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="@dimen/dp_20"
                            android:ellipsize="end"
                            android:maxLength="5"
                            android:text="晴转多云"
                            android:textColor="@color/color_999"
                            android:textSize="15dp"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <ImageView
                            android:id="@+id/today_weather_icon"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_marginTop="8dp"
                            android:src="@mipmap/icon_weather_zhongyu"
                            app:layout_constraintStart_toStartOf="@+id/tv01"
                            app:layout_constraintTop_toBottomOf="@+id/tv01" />

                        <com.zhangsheng.shunxin.weather.widget.LunarTextView
                            android:id="@+id/today_temp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="28/36"
                            android:textColor="@color/color_333"
                            android:textSize="@dimen/dp_20"
                            android:textStyle="bold"
                            app:fontsPath="fonts/century-gothic-bold.ttf"
                            app:layout_constraintBottom_toBottomOf="@+id/today_weather_icon"
                            app:layout_constraintEnd_toEndOf="@+id/today_weather"
                            app:layout_constraintTop_toTopOf="@+id/today_weather_icon" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <View
                        android:layout_width="0.5dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:background="#EDEDED" />

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/layout_tomorrow"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">

                        <TextView
                            android:id="@+id/tv02"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/dp_20"
                            android:text="明天"
                            android:textColor="@color/color_333"
                            android:textSize="18dp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/tomorrow_weather"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:ellipsize="end"
                            android:maxLength="5"
                            android:text="多云转晴"
                            android:textColor="@color/color_999"
                            android:textSize="15dp"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <ImageView
                            android:id="@+id/tomorrow_weather_icon"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_marginTop="8dp"
                            android:src="@mipmap/icon_weather_zhongyu"
                            app:layout_constraintStart_toStartOf="@+id/tv02"
                            app:layout_constraintTop_toBottomOf="@+id/tv02" />

                        <com.zhangsheng.shunxin.weather.widget.LunarTextView
                            android:id="@+id/tomorrow_temp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="28/36"
                            android:textColor="@color/color_333"
                            android:textSize="@dimen/dp_20"
                            android:textStyle="bold"
                            app:fontsPath="fonts/century-gothic-bold.ttf"
                            app:layout_constraintBottom_toBottomOf="@+id/tomorrow_weather_icon"
                            app:layout_constraintEnd_toEndOf="@+id/tomorrow_weather"
                            app:layout_constraintTop_toTopOf="@+id/tomorrow_weather_icon" />

                    </androidx.constraintlayout.widget.ConstraintLayout>
                </androidx.appcompat.widget.LinearLayoutCompat>

                <!-- 24小时预报-->
                <androidx.appcompat.widget.LinearLayoutCompat
                    android:id="@+id/ll_24"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:layout_marginTop="@dimen/dp_12"
                    android:layout_marginRight="12dp"
                    android:background="@drawable/shape_r12_white"
                    android:orientation="vertical"
                    android:paddingStart="@dimen/dp_8"
                    android:paddingBottom="@dimen/dp_8">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_14"
                        android:drawableLeft="@drawable/shape_tag"
                        android:drawablePadding="@dimen/dp_10"
                        android:paddingBottom="@dimen/dp_14"
                        android:text="24小时预报"
                        android:textColor="@color/color_333"
                        android:textSize="@dimen/dp_18"
                        android:textStyle="bold" />

                    <com.maiya.thirdlibrary.widget.smartlayout.recycleview.SmartRecycleView
                        android:id="@+id/hour_weather"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:focusable="false"
                        app:LayoutManager="horizontal"
                        app:ScrollContol="horizontal"
                        app:isScrollChild="true"
                        app:item_layout="@layout/item_hour_weather" />

                </androidx.appcompat.widget.LinearLayoutCompat>

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="12dp" />

                <com.zhangsheng.shunxin.ad.widget.AdvWeatherLayout
                    android:id="@+id/adv_weather_24"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_12"
                    android:layout_marginEnd="@dimen/dp_12"
                    app:background="@drawable/shape_ad_bg"
                    app:divider_color="@android:color/transparent"
                    app:divider_higth="@dimen/dp_12" />

                <!-- 15日预报-->
                <RelativeLayout
                    android:id="@+id/ll_15"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp"
                    android:background="@drawable/shape_r12_white"
                    android:paddingStart="@dimen/dp_8"
                    android:paddingBottom="@dimen/dp_8">

                    <TextView
                        android:id="@+id/tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_14"
                        android:drawableLeft="@drawable/shape_tag"
                        android:drawablePadding="@dimen/dp_10"
                        android:paddingBottom="@dimen/dp_14"
                        android:text="15日预报"
                        android:textColor="@color/color_333"
                        android:textSize="@dimen/dp_18"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="@dimen/dp_90"
                        android:layout_height="@dimen/dp_29"
                        android:layout_alignParentRight="true"
                        android:layout_marginTop="@dimen/dp_14"
                        android:layout_marginRight="@dimen/dp_10"
                        android:layout_marginBottom="@dimen/dp_14"
                        android:background="@drawable/shape4r_f7_sbg"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:padding="@dimen/dp_2">

                        <TextView
                            android:id="@+id/chart_type"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@drawable/shape_blue_sbg"
                            android:gravity="center"
                            android:text="趋势"
                            android:textColor="@color/color_333"
                            android:textSize="14dp" />

                        <TextView
                            android:id="@+id/line_type"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="列表"
                            android:textColor="@color/color_999"
                            android:textSize="14dp" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/frame_list_fif"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <com.maiya.thirdlibrary.widget.smartlayout.recycleview.SmartRecycleView
                            android:id="@+id/fif_list_weather"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:LayoutManager="vertical"
                            app:isScrollChild="true"
                            app:item_layout="@layout/item_fif_list" />

                        <com.maiya.thirdlibrary.widget.shapview.ShapeView
                            android:id="@+id/fif_load_more"
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/dp_50"
                            android:drawableRight="@mipmap/icon_arrow_down"
                            android:drawablePadding="@dimen/dp_6"
                            android:gravity="center"
                            android:text="点击查看15天天气"
                            android:textColor="#088EFF"
                            android:textSize="@dimen/dp_16"
                            app:bottomLeftRadius="@dimen/dp_8"
                            app:bottomRightRadius="@dimen/dp_8" />

                    </LinearLayout>

                    <com.maiya.thirdlibrary.widget.smartlayout.recycleview.SmartRecycleView
                        android:id="@+id/fif_weather"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv"
                        android:focusable="false"
                        app:LayoutManager="horizontal"
                        app:ScrollContol="horizontal"
                        app:isScrollChild="true"
                        app:item_layout="@layout/weather_item" />
                </RelativeLayout>

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_12" />

                <com.zhangsheng.shunxin.ad.widget.AdvWeatherLayout
                    android:id="@+id/adv_weather_fif"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_12"
                    android:layout_marginEnd="@dimen/dp_12"
                    app:background="@drawable/shape_ad_bg"
                    app:divider_color="@android:color/transparent"
                    app:divider_higth="@dimen/dp_12" />

                <!-- 生活指数-->
                <LinearLayout
                    android:id="@+id/ll_life"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp"
                    android:background="@drawable/shape_r12_white"
                    android:orientation="vertical"
                    android:paddingStart="@dimen/dp_8"
                    android:paddingEnd="@dimen/dp_8"
                    android:paddingBottom="@dimen/dp_10">

                    <TextView
                        android:id="@+id/life_t2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_14"
                        android:drawableLeft="@drawable/shape_tag"
                        android:drawablePadding="@dimen/dp_10"
                        android:paddingBottom="@dimen/dp_14"
                        android:text="生活指数"
                        android:textColor="@color/color_333"
                        android:textSize="@dimen/dp_18"
                        android:textStyle="bold" />

                    <com.maiya.thirdlibrary.widget.smartlayout.recycleview.SmartRecycleView
                        android:id="@+id/life"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:LayoutManager="horizontal_grid"
                        app:isScrollChild="true"
                        app:item_count="3"
                        app:item_layout="@layout/item_life_sug" />

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginLeft="@dimen/dp_8"
                        android:layout_marginTop="@dimen/dp_5"
                        android:layout_marginRight="@dimen/dp_8"
                        android:background="#EDEDED" />

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:layout_marginLeft="@dimen/dp_8"
                        android:layout_marginTop="@dimen/dp_1"
                        android:layout_marginRight="@dimen/dp_8"
                        android:background="#EDEDED" />

                    <LinearLayout
                        android:id="@+id/ll_calendar"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingTop="@dimen/dp_12">

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:id="@+id/cl_calendar"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1">

                            <com.zhangsheng.shunxin.weather.widget.LunarTextView
                                android:id="@+id/tv_calendar_lunar"
                                android:layout_width="wrap_content"
